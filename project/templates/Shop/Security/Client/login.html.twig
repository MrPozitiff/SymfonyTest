<div class="tab" id="login-tab">
    <form class="reg-form" action="{{ path('app_shop_user_login_check') }}" method="post" id="log-form">
        <div class="form-row">
            {{ form_errors(form._username) }}
            <div class="form-column">
                <div class="form-group">
                    <label for="log-mail" class="form-label">
                        Email
                    </label>

                    {{ form_widget(form._username, {'attr': {'class':'form-field'}}) }}
                    {#<input type="email" class="form-field" id="log-mail">#}
                </div>
            </div>
            {{ form_errors(form._password) }}
            <div class="form-column">
                <div class="form-group">
                    <label for="log-pass" class="form-label">
                        Password
                    </label>
                    {{ form_widget(form._password, {'attr': {'class':'form-field'}}) }}
                    {#<input type="password" class="form-field" id="log-pass">#}
                </div>
            </div>
            <input type="hidden" name="_csrf_shop_security_token" value="{{ csrf_token('shop_authenticate') }}">
        </div>
        <div class="form-group">
            <button class="btn btn--blue">{{ 'template.security.user.button_login'|trans }}</button>
        </div>
    </form>
    <div class="authorization-social">
        <div class="authorization-social__separator">
            <span>{{ 'template.security.user.social_login_title'|trans }}</span>
        </div>
        <a href="{{ path('hwi_oauth_wechat') }}" class="authorization-social__btn">
            <img src="{{ asset('assets/shop/images/wechatpay.png') }}" width="99" height="26" alt="">
        </a>
    </div>
</div>
