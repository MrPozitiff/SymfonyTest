{% extends 'Shop/Client/index.html.twig' %}

{% block account_data %}
<div class="account-data">
    <form class="account-edit" id="personal-data">
        <div class="account-inner__title">
            Edit Personal Information
        </div>
        <div class="form-group">
            <label for="reg-name" class="form-label">
                Name
            </label>
            <input type="text" class="form-field" id="reg-name">
        </div>
        <div class="form-group">
            <label for="reg-phone" class="form-label">
                Phone number
            </label>
            <input type="tel" class="form-field" id="reg-phone">
        </div>
        <div class="form-group">
            <label for="reg-mail" class="form-label">
                Email
            </label>
            <input type="email" class="form-field" id="reg-mail">
        </div>
        <button class="btn btn--blue">
            Save Changes
        </button>
    </form>
    <div class="account-data__thumb">
        <img src="{{ asset('assets/shop/images/account.svg') }}" width="260" height="406" alt="">
    </div>
</div>
{% endblock %}
