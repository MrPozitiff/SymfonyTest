{% extends 'Shop/layout.html.twig' %}

{% block content %}
    <div class="page account-page">
        <div class="page-inner">
            <ul class="breadcrumbs">
                <li>
                    <a href="">Home</a>
                </li>
                <li>
                    <span>Personal Area</span>
                </li>
            </ul>
            <div class="page-title">
                <span>Personal Area</span>
                <svg>
                    <use xlink:href="{{ asset('/assets/shop/images/sprite.svg') }}#wave"></use>
                </svg>
            </div>
            {% set currentRoute = app.request.attributes.get('_route') %}
            <div class="account">
                <div class="account-sidebar">
                    <ul class="account-nav">
                        <li>
                            <a href="{{ path('shop_user_account_dashboard') }}"
                                    {% if currentRoute == 'shop_user_account_dashboard'%} class="active"{% endif %}>
                                Certificates
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('shop_user_account_profile_update') }}"
                                    {% if currentRoute == 'shop_user_account_profile_update'%} class="active"{% endif %}>Edit Profileâ€™s Info</a>
                        </li>
                        <li>
                            <a href="{{ path('shop_user_account_change_password') }}"
                                    {% if currentRoute == 'shop_user_account_change_password'%} class="active"{% endif %}>Change Password</a>
                        </li>
                    </ul>
                    <a href="{{ path('app_shop_user_logout') }}" class="btn btn--line account-log-out">
                        Log Out
                    </a>
                </div>
                <div class="account-inner">
                    {% block account_data %}
                    <div class="account-data">
                        <form class="account-edit" id="personal-data">
                            <div class="account-inner__title">
                                Edit Personal Information
                            </div>
                            <div class="form-group">
                                <label for="reg-name" class="form-label">
                                    Name
                                </label>
                                <input type="text" class="form-field" id="reg-name">
                            </div>
                            <div class="form-group">
                                <label for="reg-phone" class="form-label">
                                    Phone number
                                </label>
                                <input type="tel" class="form-field" id="reg-phone">
                            </div>
                            <div class="form-group">
                                <label for="reg-mail" class="form-label">
                                    Email
                                </label>
                                <input type="email" class="form-field" id="reg-mail">
                            </div>
                            <button class="btn btn--blue">
                                Save Changes
                            </button>
                        </form>
                        <div class="account-data__thumb">
                            <img src="{{ asset('assets/shop/images/account.svg') }}" width="260" height="406" alt="">
                        </div>
                    </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}